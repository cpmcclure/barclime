<!DOCTYPE html>
<html lang="en">
	<head>
    	<meta charset="utf-8">
    	<meta name="description" content="This is where your description goes">
    	<meta name="keywords" content="one, two, three">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>Barclime</title>

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com"> 
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
		<link href="https://fonts.googleapis.com/css2?family=Basic&family=Cairo&display=swap" rel="stylesheet">
		<!-- external CSS link -->
		<link rel="stylesheet" href="css/reset.css">
		<link rel="stylesheet" href="css/style.css">
	</head>
	<body>

		<section class="center">
			
			<nav class="header">
				<a href="/dash" class="headerLink">
                    <h1>BarClime</h1>
                </a>
			</nav>

			<section>
                <h3><%= user.userName %></h3>
            </section>
			</section>

		</section>

        <!-- This will show data! -->
        <section>
            <ul>
                <% for(var i=0; i<data.length; i++) {%>
                  <li>
                    <table>
                        <tr>
                            <th>Date</th>
                            <th>Grind</th>
                            <th>Dose</th>
                            <th>Weight</th>
                            <th>Time</th>
                            <th>Roast Date</th>
                        </tr>
                       <tr>
                            <td><%= data[i].currentTime.toISOString().split('T')[0] %></td>
                            <td><%= data[i].grind %></td>
                            <td><%= data[i].dose %></td>
                            <td><%= data[i].weight %></td>
                            <td><%= data[i].time %></td>
                            <td><%= data[i].roastDate.toISOString().split('T')[0] %></td>
                       </tr> 
                    </table>
                    <!-- <a href="/shotdata/<%= data[i]._id%>">
                    </a> -->
                  </li>
                <% } %>
                </ul>
        </section>


		<script type="text/javascript" src="js/main.js"></script>
	</body>
</html>