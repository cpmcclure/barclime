<!DOCTYPE html>
<html lang="en">
	<head>
    	<meta charset="utf-8">
    	<meta name="description" content="This is where your description goes">
    	<meta name="keywords" content="one, two, three">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>Barclime</title>

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com"> 
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
		<link href="https://fonts.googleapis.com/css2?family=Basic&family=Cairo&display=swap" rel="stylesheet">
		<!-- external CSS link -->
		<link rel="stylesheet" href="../css/reset.css">
		<link rel="stylesheet" href="../css/style.css">
	</head>
	<body>

		<section class="center">
			
			<nav class="header">
				<a href="/shot" class="headerLink">
                    <h1>BarClime</h1>
                </a>
			</nav>

        <!-- This will show data! -->
        <section>
            <ul class="center shotDisplay">
                  <li class="shotItem">
                    <section class="col-2">
                        <h3><%= data[0].currentTime.toISOString().split('T')[0] %></h3>
                        <section class="twoButtons">
                            <button class="editButton">Edit</button>
                            <form
          action="/shot/deleteShotData/<%= data[0]._id %>?_method=DELETE"
          method="POST">
                                <button class="editButton deleteButton" type="submit">Delete</button>
                            </form>
                        </section>
                    </section>
                    <table class="shotTable">
                        <tr>
                            <th>Grind</th>
                            <th>Dose</th>
                            <th>Weight</th>
                            <th>Time</th>
                            <th>Roast Date</th>
                        </tr>
                       <tr>
                            <td><%= data[0].grind %></td>
                            <td><%= data[0].dose %></td>
                            <td><%= data[0].weight %></td>
                            <td><%= data[0].time %></td>
                            <td><%= data[0].roastDate.toISOString().split('T')[0] %></td>
                       </tr>
                    </table>
                    <form action="/shot/editShotData/<%= data[0]._id %>?_method=PUT"
                        method="POST">
                        <table class="editTable">
                            <tr>
                                <td>
                                    <input type="number" name="grind" id="grind" min="1" max="10" step=".1" value="<%= data[0].grind %>">
                                </td>
                                <td>
                                    <input type="number" name="dose" id="dose" min="20.0" max="26.0" step=".1" value="<%= data[0].dose %>">
                                </td>
                                <td>
                                    <input type="number" name="weight" id="weight" min="34" max="42" step=".1" value="<%= data[0].weight %>">
                                </td>
                                <td>
                                    <input type="number" name="time" id="time" min="20" max="30" step="1" value="<%= data[0].time %>">
                                </td>
                                <td>
                                    <input type="date" name="roastDate" id="roastDate" value="<%= data[0].roastDate.toISOString().split('T')[0] %>">
                                </td>
                            </tr>
                        </table>
                        <button class="editButton" type="submit">Update</button>
                    </form>
                  </li>
                </ul>
        </section>
	</body>
</html>